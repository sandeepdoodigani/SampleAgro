<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ToggleButton
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/fromDevice"
                        android:padding="5dp"
                        android:textColor="#ffffff"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:textOff="From Device"
                        android:background="@color/colorPrimaryDark"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />




                </LinearLayout>

                <Button
                    android:layout_width="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Connect"
                    android:textColor="#ffffff"
                    android:visibility="invisible"
                    android:textStyle="bold"
                    android:id="@+id/connect"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_margin="20dp"
                    android:visibility="invisible"
                    android:id="@+id/status"
                    android:src="@drawable/red"
                    android:layout_height="25dp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Click from device to get data from device"
                android:layout_marginStart="15dp"
                android:id="@+id/note"
                android:layout_height="wrap_content" />
            <View android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="1dp"
                android:background="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/sample"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@string/wi_wmo4680_03"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="SampleNo :"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/latitude"
                android:fontFamily="@string/wi_wmo4680_03"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:text="Latitude :"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/longitude"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@string/wi_wmo4680_03"
                android:layout_marginStart="20dp"
                android:textStyle="bold"

                android:textColor="#000000"
                android:text="Longitude:"
                android:layout_height="wrap_content" />
            <View android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/ph"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="pH: "
                    android:fontFamily="@string/wi_wmo4680_03"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="50dp"
                    android:padding="5dp"
                    android:inputType="number"
                    android:ems="10"
                    android:visibility="invisible"
                    android:background="@drawable/boxshape"
                    android:id="@+id/ph_Manual"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/ec"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="15dp"

                    android:fontFamily="@string/wi_wmo4680_03"
                    android:textColor="#000000"
                    android:text="Ec: "
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="50dp"
                    android:padding="5dp"
                    android:inputType="number"
                    android:ems="10"
                    android:visibility="invisible"
                    android:background="@drawable/boxshape"

                    android:id="@+id/ec_Manual"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/moisture"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:fontFamily="@string/wi_wmo4680_03"
                    android:textColor="#000000"
                    android:text="Moisture: "
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="50dp"
                    android:padding="5dp"
                    android:inputType="number"
                    android:ems="10"
                    android:visibility="invisible"
                    android:background="@drawable/boxshape"
                    android:id="@+id/mo_Manual"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:weightSum="6"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:text="Sample No"
                    android:textSize="12dp"
                    android:textColor="#078377"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:background="@drawable/cell_shape"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:textColor="#078377"
                    android:textStyle="bold"
                    android:layout_weight="1.4"
                    android:textSize="12dp"
                    android:text="Latitude"
                    android:background="@drawable/cell_shape"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:textSize="12dp"
                    android:textColor="#078377"
                    android:textStyle="bold"
                    android:text="Longitude"
                    android:background="@drawable/cell_shape"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textColor="#078377"
                    android:textStyle="bold"                    android:text="pH"
                    android:textSize="12dp"

                    android:background="@drawable/cell_shape"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"                    android:textSize="12dp"
                    android:text="EC"
                    android:background="@drawable/cell_shape"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"                    android:textSize="12dp"
                    android:text="Mo"
                    android:background="@drawable/cell_shape"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />
            </TableRow>

        </TableLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/recordList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            >

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="Add"
                android:id="@+id/add"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="Submit"
                android:id="@+id/submit"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
