<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.a1a.sujhav.fragments.Home">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.example.a1a.sujhav.fragments.Home">


        <TextView
            android:layout_width="match_parent"
            android:text="Weather"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <com.github.pwittchen.weathericonview.WeatherIconView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            custom:weatherIconResource="@string/wi_day_haze"
                            custom:weatherIconColor="#efd251"
                            custom:weatherIconSize="40" />
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Haze"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/temphum"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="46Â°C"
                                android:id="@+id/temperature"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:textSize="30dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Temperature"
                                android:layout_margin="7dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="18%"
                                android:id="@+id/humidity"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:textSize="30dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Humdity"
                                android:layout_margin="7dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />
                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:id="@+id/wind"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="1dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:id="@+id/windspeed"
                        android:text="Wind speed: 30mts/sec"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/pressure"
                        android:text="Pressure     : 50 hPa"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:id="@+id/direc"
                        android:text="Wind Direction :18:30"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/wea"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle"
                        android:text="Get Suggestions"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:text="Your Soil"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="135dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <pl.pawelkleczkowski.customgauge.CustomGauge
                            android:id="@+id/gauge1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            app:gaugeEndValue="10"
                            app:gaugePointEndColor="#ece407"
                            app:gaugePointStartColor="#e1d609"
                            app:gaugeStartAngle="135"
                            app:gaugeStartValue="0"
                            app:gaugeStrokeCap="ROUND"
                            app:gaugeStrokeColor="@color/colorPrimary"
                            app:gaugeStrokeWidth="8dp"
                            app:gaugeSweepAngle="270" />
                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/gauge1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="18dp"
                            android:text="0.5"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Soil Fertility"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#5e5e56"

                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="Average pH :"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Average EC :"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="Average Mositure :"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:id="@+id/soil"
                        android:background="@drawable/rectangle"
                        android:text="Get Suggestions"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:text="Sujhav Alerts"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:id="@+id/left"
                    android:src="@drawable/ic_chevron_left_black_24dp"
                    android:layout_height="match_parent" />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_weight="2.4"
                    android:scrollbars="horizontal"
                    android:layout_margin="10dp"
                    android:id="@+id/sujhavAlerts"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:id="@+id/right"

                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_height="match_parent" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:text="Latest Suggestion"
            android:layout_marginTop="5dp"
            android:textStyle="bold"

            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="5dp"
                        android:text="Weather based"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:textColor="#000000"
                        android:text="No Suggestion found"
                        android:background="@drawable/boxshape"
                        android:layout_height="match_parent" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="5dp"
                        android:text="Soil based "
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:text="No Suggestion found"
                        android:layout_margin="5dp"
                        android:background="@drawable/boxshape"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>